{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"[markdown]": {
		"editor.wordWrap": "on",
		"editor.codeActionsOnSave": {
			"source.fixAll.markdownlint": true
		}
	},
	"prettier.documentSelectors": ["**/*.astro"],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"astro", // Enable .astro
		"typescript", // Enable .ts
		"typescriptreact"
	],
	"files.exclude": {
		"node_modules/": true,
		".astro": true,
		".vscode": true
	}
}
